<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- MyLibrarian Community Focus Palette -->
    <!-- Primary colors from MyLibrarian palette -->
    <Color x:Key="Primary">#245C4F</Color>
    <!-- Evergreen - Deep, organic green for headers and main accents -->
    <Color x:Key="PrimaryHover">#1e4a3f</Color>
    <!-- Darker primary for hover states -->
    <Color x:Key="PrimaryLight">#2f6b5d</Color>
    <!-- Lighter primary for borders -->
    <Color x:Key="PrimaryDark">#1e4a3f</Color>
    <Color x:Key="PrimaryDarkText">#F9F6F1</Color>

    <Color x:Key="Secondary">#D8A48F</Color>
    <!-- Dusty Rose - Soft warm accent for friendly, human tone -->
    <Color x:Key="SecondaryHover">#d19277</Color>
    <!-- Darker secondary for hover states -->
    <Color x:Key="SecondaryDarkText">#2E2B28</Color>

    <Color x:Key="Tertiary">#E6B655</Color>
    <!-- Honey Gold - Highlight or call-to-action tone for contrast -->
    <Color x:Key="Accent">#E6B655</Color>
    <Color x:Key="AccentHover">#e2b143</Color>
    <!-- Darker accent for hover states -->

    <!-- Background colors -->
    <Color x:Key="BackgroundLight">#F9F6F1</Color>
    <!-- Linen - Gentle warm background for content areas -->
    <Color x:Key="BackgroundDark">#3A3A3A</Color>
    <!-- Coffee Gray - Dark mode or footer background -->

    <!-- Text colors -->
    <Color x:Key="TextPrimary">#2E2B28</Color>
    <!-- Walnut - Readable warm dark text color -->
    <Color x:Key="TextSecondary">#7A6F66</Color>
    <!-- Warm Taupe - Muted secondary text tone -->

    <!-- Success/Info/Warning/Danger colors that complement the palette -->
    <Color x:Key="Success">#245C4F</Color>
    <!-- Use primary green for success -->
    <Color x:Key="Info">#7A6F66</Color>
    <!-- Use warm taupe for info -->
    <Color x:Key="Warning">#E6B655</Color>
    <!-- Use honey gold for warnings -->
    <Color x:Key="Danger">#c74545</Color>
    <!-- Warm red that complements the palette -->

    <!-- Border and shadow colors -->
    <Color x:Key="Border">#e8e3db</Color>
    <!-- Light warm border -->
    <Color x:Key="Shadow">#1A2E2B28</Color>
    <!-- Subtle shadow using primary text color with 10% opacity -->

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Brushes for MyLibrarian palette -->
    <SolidColorBrush x:Key="PrimaryBrush"
            Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush"
            Color="{StaticResource PrimaryHover}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush"
            Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="SecondaryBrush"
            Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryHoverBrush"
            Color="{StaticResource SecondaryHover}"/>
    <SolidColorBrush x:Key="TertiaryBrush"
            Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="AccentBrush"
            Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="AccentHoverBrush"
            Color="{StaticResource AccentHover}"/>

    <SolidColorBrush x:Key="BackgroundLightBrush"
            Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush"
            Color="{StaticResource BackgroundDark}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush"
            Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush"
            Color="{StaticResource TextSecondary}"/>

    <SolidColorBrush x:Key="SuccessBrush"
            Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="InfoBrush"
            Color="{StaticResource Info}"/>
    <SolidColorBrush x:Key="WarningBrush"
            Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush"
            Color="{StaticResource Danger}"/>

    <SolidColorBrush x:Key="BorderBrush"
            Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="ShadowBrush"
            Color="{StaticResource Shadow}"/>

    <SolidColorBrush x:Key="WhiteBrush"
            Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush"
            Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush"
            Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush"
            Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush"
            Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush"
            Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush"
            Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush"
            Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush"
            Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush"
            Color="{StaticResource Gray950}"/>
</ResourceDictionary>