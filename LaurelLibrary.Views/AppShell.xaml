<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LaurelLibrary.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LaurelLibrary.Views"
    Title="LaurelLibrary.Views">

    <ShellContent
        Title="Authentication"
        ContentTemplate="{DataTemplate local:AuthenticationPage}"
        Route="AuthenticationPage"/>

    <ShellContent
        Title="Reader Authentication"
        ContentTemplate="{DataTemplate local:ReaderAuthenticationPage}"
        Route="ReaderAuthenticationPage"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>

</Shell>
