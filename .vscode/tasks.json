{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "android-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/LaurelLibrary.Views/LaurelLibrary.Views.csproj",
                "-f",
                "net9.0-android",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "android-deploy",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/LaurelLibrary.Views/LaurelLibrary.Views.csproj",
                "-t:Run",
                "-f",
                "net9.0-android"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/LaurelLibrary.Mobile.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "rebuild",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/LaurelLibrary.Mobile.sln",
                "--no-incremental"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": "clean"
        }
    ]
}